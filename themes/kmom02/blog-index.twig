{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}

    <div class="main" role="main">
        <div class="twoflex">

            <div class="blogbar">
                {% for page in pages("technology/sub") if not page.hidden %}
                    <div class="post">
                        <ul><li><a href="{{ page.url }}">{{ page.title }}</a></li></ul>
                    </div>
                {% endfor %}
            </div>
    
            <div class="blogcontent">{{ content }}</div>
        </div>
    </div>
    
    {% include 'incl/footer.twig' %}
</body>

</html>